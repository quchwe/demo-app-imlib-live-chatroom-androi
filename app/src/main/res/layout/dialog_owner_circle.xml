<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_circular_white"
    android:orientation="vertical">
    <!--android:background="@drawable/bg_owner_circle"-->


    <TextView
        android:id="@+id/tv_home_dialog"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/x40"
        android:textSize="@dimen/x54"
        android:textColor="#888888" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/y20"
        android:background="#666" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        android:id="@+id/rl_two_btn">
        <Button
            android:id="@+id/btn_two_confirm"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x48"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="#21b922" />
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#666"/>
        <Button
            android:id="@+id/btn_two_cancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:layout_marginRight="@dimen/x50"
            android:textSize="@dimen/x48"
            android:background="@null"
            android:textColor="#21b922" />
    </LinearLayout>
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/x48"
        android:background="@null"
        android:textColor="#21b922" />
</LinearLayout>