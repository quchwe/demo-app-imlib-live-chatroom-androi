<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey5"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/title_bar"></include>

    <TextView
        android:id="@+id/tv_point_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="请输入您的注册信息"
        android:textColor="@color/text_grey"

        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x45">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"

            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30">

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/phone_number"
                android:textColor="@color/hint_text"
                android:textSize="16dp" />
            <!--<Button-->
            <!--android:id="@+id/btn_get_verification_code"-->
            <!--android:layout_width="@dimen/x300"-->
            <!--android:layout_height="@dimen/y100"-->
            <!--android:text="@string/get_verification_code"-->
            <!--android:clickable="false"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:background="@drawable/bg_btn_grey"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:textSize="15dp"/>-->
            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y156"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@+id/tv_phone_number"
                android:background="@null"
                android:enabled="true"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/login_divider" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30">

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="用户名"
                android:textColor="@color/hint_text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@+id/tv_userName"
                android:background="@null"
                android:enabled="true"
                android:inputType="textVisiblePassword"
                android:maxLength="6"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/login_divider" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30">

            <TextView
                android:id="@+id/tv_drivingLicenseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/drivingLicenseId"
                android:textColor="@color/hint_text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_drivingLicenseId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@+id/tv_drivingLicenseId"
                android:background="@null"
                android:enabled="true"
                android:inputType="textVisiblePassword"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/login_divider" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/login_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/verification_code"
                android:textColor="@color/hint_text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x50"
                android:layout_toRightOf="@+id/tv_password"
                android:background="@null"
                android:enabled="true"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/login_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30">

            <TextView
                android:id="@+id/tv_password_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/password_again"
                android:textColor="@color/hint_text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_password_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@+id/tv_password_again"
                android:background="@null"
                android:enabled="true"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300">

        <include layout="@layout/grey_button_width_match" />

        <LinearLayout
            android:id="@+id/ll_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_next_step"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:id="@+id/tv_protocol"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="@string/protocol"-->
            <!--android:textColor="@color/text_grey"-->
            <!--android:textSize="@dimen/x36" />-->
            <!--<TextView-->
            <!--android:id="@+id/tv_protocol"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="36px"-->
            <!--android:text="@string/huibang_protocol"-->
            <!--android:textColor="@color/text_blue"/>-->
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
